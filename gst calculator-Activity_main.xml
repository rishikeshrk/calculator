<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal"
        android:text="GST CALCULATOR APP"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100sp"
        android:gravity="center_horizontal"
        android:text="Enter the amount"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/txt_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtView1"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:textSize="24sp"></EditText>

    <TextView
        android:id="@+id/txtView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_amount"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:text="Enter the Gst percent"
        android:textSize="24sp"></TextView>

    <EditText

        android:id="@+id/txt_gst_percent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtView2"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:textSize="24sp" />


    <TextView

        android:id="@+id/txt_gst_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_gst_percent"
        android:layout_marginTop="32dp"

        android:textSize="24sp" />

    <TextView

        android:id="@+id/txt_total_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_gst_amount"
        android:layout_marginTop="67dp"

        android:textSize="24sp" />

    <Button

        android:id="@+id/bttn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_total_amount"
        android:layout_marginTop="-112dp"
        android:text="calculate"
        android:textSize="24sp"


        />


</RelativeLayout>






